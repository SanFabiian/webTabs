@import 'lib/_global'
@import 'lib/_var'
@import 'lib/_mixin'
.body_wrap
	display grid
	grid-template-rows 8rem 1fr 7rem
.header_taps
	flexCenter()
	width 100%
	height 100%
	background firstColor
	color lightColor
	text-align center
.nav_tabs
	width 100vw
	height 7rem
	position fixed
	bottom 0
.tabs
	display grid
	grid-template-columns repeat(5, 1fr)
	height 100%
	background darkColor
	font-size 1.7rem
.tab
	flexCenter()
	width 100%
	height 100%
	color #fff
	&:active
		background darken(darkColor, 20%)
.tabActive
	background darken(darkColor, 20%)
.main_taps
	padding 2rem
	padding-bottom 9rem
	height 100%
.panel
	position absolute
	left -500%
	&.panelActive
		position relative
		left 0
